<div class="m-simpleHeader">
    <a href="javascript:;" class="m-simpleHeader-back" data-fn="back"><i class="ico ico-back"></i></a>
    <h1>修改密码</h1>
</div>
<div class="m-login">
    <form id="resetPasswordForm">
        <div class="m-login-form w-form">
            <div class="w-form-item w-inputBar w-bar">
                <div class="w-bar-label">旧密码：</div><a href="javascript:;" class="w-bar-input-clear">×</a>
                <div class="w-bar-control">
                    <input placeholder="请输入旧密码" autocapitalize="off" class="w-bar-input" type="password" name="oldpasswd">
                </div>
            </div>
            <div class="w-form-item w-inputBar w-bar">
                <div class="w-bar-label">新密码：</div><a href="javascript:;" class="w-bar-input-clear">×</a>
                <div class="w-bar-control">
                    <input placeholder="请输入新密码" autocapitalize="off" class="w-bar-input" type="password" name="newpasswd">
                </div>
            </div>
            <div class="w-form-item w-inputBar w-bar m-user-mobile-codeinput">
                <div class="w-bar-label">验证码：</div>
                <div class="w-bar-control">
                    <input placeholder="请输入验证码" class="w-bar-input" type="tel" name="code" value="">
                    <button type="button" class="w-button" id="getResetCode">获取验证码</button>
                </div>
            </div>
        </div>
        <div class="m-login-submit">
            <button class="w-button w-button-main" type="submit">修 改 密 码</button>
        </div>
    </form>
</div>