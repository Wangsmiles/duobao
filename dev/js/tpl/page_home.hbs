<script>

    function setCircle(){
        var lotteryCon=$('.lottery-con');
        //    var lotteryConW=lotteryCon.width();
        var lotteryConW=$('body').width();
        //    console.log(lotteryConW);
        var calc=~~lotteryConW/10;

        for(var i=0,spanL=calc+1;i<spanL;i++){
            lotteryCon.append('<span class="circle"></span>')
        }

        $('.circle').each(function(i){
            var left=i*10;
            $(this).css({'left':left})
        })
    }

    setCircle();

    window.onresize=function(){
        $('.lottery-con').html('');
        setCircle();
    }
</script>