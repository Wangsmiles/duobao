<div class="m-simpleHeader">
    <a href="javascript:;" class="m-simpleHeader-back" data-hide="#addressForm" data-show="#addressListPage">取消</a>
    <button type="submit" class="m-simpleHeader-ok">保存</button>
    {{#if id}}
    <h1>修改收货地址</h1>
    {{else}}
    <h1>新增收货地址</h1>
    {{/if}}
</div>
<div class="m-user-addrAdd">
    <div class="m-user-bar">
        <div class="w-inputBar w-bar">
            <div class="w-bar-label">收货人</div><a href="javascript:;" class="w-bar-input-clear" style="display: none;">×</a>
            <div class="w-bar-control">
                <input class="w-bar-input" type="text" name="name" value="{{consignee}}">
            </div>
        </div>
        <div class="w-inputBar w-bar">
            <div class="w-bar-label">手机号码</div><a href="javascript:;" class="w-bar-input-clear">×</a>
            <div class="w-bar-control">
                <input class="w-bar-input" type="text" name="phone" value="{{phone}}" maxlength="11">
            </div>
        </div>
        <div class="w-inputBar w-bar">
            <div class="w-bar-label">邮政编码</div><a href="javascript:;" class="w-bar-input-clear">×</a>
            <div class="w-bar-control">
                <input class="w-bar-input" type="text" name="zipcode" value="{{zipcode}}" maxlength="6">
            </div>
        </div>
        <div class="w-selectBar w-bar">
            <div class="w-bar-label">省份</div>
            <div class="w-bar-control">
                <select class="w-bar-input" name="province">
                    {{#provincesList provincesList provinceId}}{{/provincesList}}
                </select>
            </div>
        </div>
        <div class="w-selectBar w-bar">
            <div class="w-bar-label">城市</div>
            <div class="w-bar-control">
                <select class="w-bar-input" name="city">
                    {{#citiesList cities cityId}}{{/citiesList}}
                </select>
            </div>
        </div>
        <div class="w-selectBar w-bar">
            <div class="w-bar-label">地区</div>
            <div class="w-bar-control">
                <select class="w-bar-input" name="area">
                    {{#citiesList areas areaId}}{{/citiesList}}
                </select>
            </div>
        </div>
        <div class="w-inputBar w-bar">
            <div class="w-bar-label">详细地址</div><a href="javascript:;" class="w-bar-input-clear">×</a>
            <div class="w-bar-control">
                <textarea class="w-bar-input" name="address">{{address}}</textarea>
            </div>
        </div>
        {{^if nodd}}
            {{#if default}}
            <div class="w-checkBar w-bar w-checkBar-checked">是否设为默认地址
                <div class="w-bar-ext">
                    <input type="checkbox" name="default" checked="checked">
                    <b class="w-switcher"></b>
                </div>
            </div>
            {{else}}
            <div class="w-checkBar w-bar">是否设为默认地址
                <div class="w-bar-ext">
                    <input type="checkbox" name="default">
                    <b class="w-switcher"></b>
                </div>
            </div>
            {{/if}}
            {{#if id}}
            <div class="w-bar m-user-bar-margin m-user-bar-border" id="removeAddress"><span class="txt-err">删除收货地址</span></div>
            <input type="hidden" name="addressId" value="{{id}}">
            {{/if}}
        {{/if}}
    </div>
</div>