<div class="m-simpleHeader">
    <a href="javascript:;" class="m-simpleHeader-back" data-fn="back"><i class="ico ico-back"></i></a>
    <h1>找回密码</h1>
</div>
<div class="m-login">
    <form id="forgetForm">
        <div class="m-login-form w-form">
            <div class="w-form-item w-inputBar w-bar">
                <div class="w-bar-label">帐号：</div>
                <div class="w-bar-control">
                    <input placeholder="请输入手机号码" autocapitalize="off" class="w-bar-input" type="tel" name="mobile">
                </div>
            </div>
            <div class="w-form-item w-inputBar w-bar m-user-mobile-codeinput">
                <div class="w-bar-label">验证码</div>
                <div class="w-bar-control">
                    <input placeholder="请输入验证码" class="w-bar-input" type="tel" name="verify_code" value="">
                    <button type="button" class="w-button" id="getForgetCode">获取验证码</button>
                </div>
            </div>
            <div class="w-form-item w-inputBar w-bar">
                <div class="w-bar-label">密码：</div>
                <div class="w-bar-control">
                    <input placeholder="请输入密码" autocapitalize="off" class="w-bar-input" type="password" name="passwd">
                </div>
            </div>
        </div>
        <div class="m-login-submit">
            <button class="w-button w-button-main" type="submit">设 置 新 密 码</button>
        </div>
    </form>
</div>
